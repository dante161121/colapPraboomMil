# Robust Data Collection with Checkpoint System

import requests
import pandas as pd
import time
import os

class DerivAPI:
    def __init__(self, api_key):
        self.api_key = api_key
        self.session = requests.Session()
        self.session.headers.update({'Authorization': self.api_key})
        self.ticks = []
        self.checkpoint_file = 'checkpoint.csv'

    def collect_ticks(self, count):
        # Check for existing checkpoint
        if os.path.exists(self.checkpoint_file):
            df = pd.read_csv(self.checkpoint_file)
            self.ticks = df['ticks'].tolist()
            print(f"Resuming from checkpoint: {len(self.ticks)} ticks collected.")

        while len(self.ticks) < count:
            try:
                response = self.session.get('https://api.deriv.com/ticks')
                if response.status_code == 200:
                    data = response.json()
                    tick = data['tick']
                    self.ticks.append(tick)
                    print(f"Collected tick: {tick}")
                    # Save checkpoint every 100 ticks
                    if len(self.ticks) % 100 == 0:
                        self.save_checkpoint()
                else:
                    print(f"Failed to get ticks: {response.status_code}")
                    time.sleep(60)  # wait before retrying
            except Exception as e:
                print(f"Error: {str(e)}")
                time.sleep(5)  # wait before retrying

        print(f"Collected a total of {len(self.ticks)} ticks.")
        self.save_checkpoint()  # final save

    def save_checkpoint(self):
        df = pd.DataFrame({'ticks': self.ticks})
        df.to_csv(self.checkpoint_file, index=False)
        print(f"Checkpoint saved with {len(self.ticks)} ticks.")

    def integrate_drive(self):
        # Example code for Google Drive integration would go here
        pass

